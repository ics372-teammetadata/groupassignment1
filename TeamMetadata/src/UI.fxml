<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml" fx:controller="Controller"
            prefWidth="500" prefHeight="300">
    <padding> <Insets top="5" left="5" bottom="5" right="5" /> </padding>


    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Open" onAction="#openFile"/>
                        <MenuItem mnemonicParsing="false" text="Save" onAction="#save"/>
                        <MenuItem mnemonicParsing="false" text="Close" onAction="#close" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <!--
        <TableView>
            <columns>
                <TableColumn text="ID" />
                <TableColumn text="Name" />
                <TableColumn text="Artist/Author" />
                <TableColumn text="Due Date" />
            </columns>
        </TableView>
        -->
        <GridPane fx:id="outputGrid" hgap="5" vgap="5"/>
    </center>
</BorderPane>
